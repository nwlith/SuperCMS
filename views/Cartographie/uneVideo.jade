include ../mixin/listeThemes

head
  title.titre= video.titre
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Code+Pro')

block content
  nav
    div.titrePrincipal
      h1.titre= video.titre
    div.liens
      a(href="/" class="navigation") Accueil
      a(href="/cartographie/references" class="navigation") Toutes les références
      a(href="/cartographie/aleatoire" class="navigation") Référence aléatoire
  figure
    h3
      a(href="#{video.lien}")= video.titre
    iframe(src="#{video.lien}" width="1160" height="652" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen)
    figcaption !{video.description}
  section.themes
    +listeThemes(video, 'video')
    
