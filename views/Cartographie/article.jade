include ../mixin/listeThemes
head
  title= reference.titre
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Code+Pro')
  
block content
  nav
    div.titrePrincipal
      h1 Cartographie des références
    div.liens
      a(href="/" class="navigation") Accueil
      a.action(href="/cartographie/references" class="navigation") Toutes les références
      a(href="/cartographie/aleatoire" class="navigation") Référence aléatoire
  article.articleDescription 
    h2.articleTitre !{reference.titre}
    div.description 
      !{reference.description}
  section.themes
    +listeThemes(reference, 'reference')
