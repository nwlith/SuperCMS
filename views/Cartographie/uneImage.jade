include ../mixinThemes/listeThemes

head
  title.titre= image.titre
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Code+Pro')

block content
  nav
    div.titrePrincipal
      h1= image.titre
    div.liens
      a(href="/cartographie/references" class="navigation") Toutes les références
      a(href="/cartographie/aleatoire" class="navigation") Référence aléatoire
      
  figure
    img(src=image.path)
    figcaption !{image.description}
  section.themes
    +listeThemes(image, 'image')
    
