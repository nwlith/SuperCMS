head 
  title= theme.nom
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Code+Pro')

block content
  body.theme
    nav(style="background: #{theme.couleur}")
      div.titrePrincipal
        h1= theme.nom
      div.liens
        a(href="/" class="navigation") Accueil 
        a(href="/cartographie/aleatoire" class="navigation") lien aléatoire
        a(href="/cms/nouvelle" class="navigation") Nouvelle référence
  h2 Liste des références
    each References in theme.references
      a(class="petit noir" href=References.classe+"/"+References.id)
        article
          img(src=References.path)
          h3.titre= References.titre
          h5= References.auteur
