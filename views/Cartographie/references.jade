head 
  title Toutes les références
  link(rel='stylesheet', href='../stylesheets/style.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Code+Pro')

block content
  nav
    div.titrePrincipal
      h1 Toutes les références
    div.liens
      a(href="/" class="navigation") Accueil 
      a(href="/cartographie/aleatoire" class="navigation") lien aléatoire
      a(href="/cms/nouvelle" class="navigation") Nouvelle référence
  h2 Liste des articles
  each Articles in articles
    a(class="petit noir" href="article/"+Articles.id)
      article.article
        h3.titre= Articles.titre
  if articles.length === 0
    p Il n'y a pas encore d'articles :(
  hr
  
  h2 Liste des images
  each Images in images
    article
      h3.titre= Images.titre
      a(href="image/"+Images.id)
        img(src=Images.path)
      p.description= Images.description
  if images.length === 0
    p Il n'y a pas encore d'images :(
  hr
  
  h2 Liste des videos
  each Videos in videos
    a(class="petit noir" href="video/"+Videos.id)
      article
        h3.titre= Videos.titre
        p.description= Videos.description
  if images.length === 0
    p Il n'y a pas encore de video :(
  hr
  
  
  p
    a(href="/cartographie/accueil" class="petit noir") Retour
