head 
  title Toutes les références
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Source+Code+Pro')

block content
  nav
    div.titrePrincipal
      h1 Toutes les références
    div.liens
      a(href="/" class="navigation") Accueil 
      a(href="/cartographie/aleatoire" class="navigation") lien aléatoire
      a(href="/cartographie/themes" class="navigation") tout les thèmes
  each References, index in references
    a(class="petit noir" href=References.classe+"/"+References.id)
      article.article
        img(src=References.path width='300px')
        h3 !{References.titre}
